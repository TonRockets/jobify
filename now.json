{
    "version": 2,
    "builds": [
        {
            "src": "*.js",
            "use": "@now/node" 
        }
    ],
    "routes": [
        {
            "src": "./*",
            "dest": "index.js"
        }
    ],
    "rewrites": [
        { "source": "/update/:id", "destination": "/api/update" },
        { "source": "/remove/:id", "destination": "/api/remove" }
    ]
}