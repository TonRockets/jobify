<html>
    <head>
        <title>Rocket</title>
        <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
        <link href="/style.css" rel="stylesheet" >
    </head>
    <body>
       <%- include('header') %>
        <aside>
            <h2>
                Editar Vaga:
                <a href="/admin/vagas" >Vagas</a>
            </h2>
            </div>
                <form method="POST" >
                    <label>Título:</label>
                    <input type="text" name="titulo" value="<%= vaga.titulo%>" />
                    <br/>
                    <label>Descrição:</label>
                    <textarea name="descricao" ><%= vaga.descricao %></textarea>
                    <br/>
                    <label>Categoria</label>
                    <select name="categoria">
                        <% categorias.forEach( categoria => { %>
                            <option value="<%= categoria.id%>" <% if(categoria.id == vaga.categoria){ %> selected <% }%> ><%= categoria.categoria %> </option>
                        <% }) %>
                    </select>
                    <br/>
                    <button>Salvar vaga</button>
                </form>
            </div>
        </aside>
    </body>
</html>
    
